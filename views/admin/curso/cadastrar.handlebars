<h5>Cadastro de Curso</h5>
        <hr>
        <form>
            <div class="form-row">
              <div class="form-group col-md-2">
                <label for="cohortID">ID Curso / cohort</label>
                <input type="text" class="form-control" name="cohortID" id="cohortID">
              </div>

              <div class="form-group col-md-7">
                  <label for="name">Titulo / Nome do Curso</label>
                  <input type="text" name="name" class="form-control" id="name">
              </div>
                <div class="form-group col-md-3">
                  <label for="entryDate">Data Cadastro</label>
                  <input type="date" class="form-control" id="entryDate">
                </div>
            </div>

            <hr>
            <div class="form-row">
              <div class="form-group col-md-3">
                <input type="number" name="gridNumber" class="form-control" id="gridNumber" placeholder="Numero de Disciplinas">
              </div>
              <div class="form-group col-md-2">
                  <button class="btn btn-success">Gerar Campos</button>
              </div>
              <hr>
            </div>
            <div class="form-row">
                <div class="input-group col-md-2">
                    <div class="input-group-prepend">
                      <div class="input-group-text">ID</div>
                    </div>
                    <input type="text" class="form-control" name="moodleID" id="moodleID" placeholder="Sala Moodle">
                </div>

                  <div class="input-group col-md-10">
                    <div class="input-group-prepend">
                      <div class="input-group-text">DISCIPLINA</div>
                    </div>
                    <input type="text" name="discipline{{number}}" class="form-control discipline" placeholder="Nome Sala no Moodle">
                  </div>
            </div>
            <hr>
            <div class="form-group mt-3">
                <label for="observation">Observações</label>
                <textarea class="form-control" name="observation" id="observation" rows="4"></textarea>
            </div>
            <div class="form-group text-right">
                <button class="btn btn-outline-danger">Cancelar</button>
                <button type="submit" class="btn btn-success">Cadastrar</button>
            </div>
          </form>