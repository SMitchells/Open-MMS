<h5>Cadastro de Alunos</h5>
        <hr>
        <form>
            <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="inputCity">Nome</label>
                  <input type="text" class="form-control" id="inputCity">
                </div>
                <div class="form-group col-md-3">
                  <label for="inputZip">Data Matricula</label>
                  <input type="date" class="form-control" id="inputZip">
                </div>
                <div class="form-group col-md-3">
                    <label for="inputState">Status</label>
                    <select id="inputState" class="form-control">
                      <option selected>Choose...</option>
                      <option>ATIVO</option>
                      <option>CANCELADO</option>
                      <option>SUPENSO</option>
                      <option>OUTRO</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-9">
                    <label for="inputState">Curso</label>
                    <select id="inputState" class="form-control">
                      <option selected>Choose...</option>
                      <option>CURSO DE EST</option>
                      <option>CURSO APC UTI</option>
                      <option>CURSO PC TCC</option>
                      <option>CURSO NEURO</option>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="inputState">Cronograma</label>
                    <select id="inputState" class="form-control">
                      <option selected>Choose...</option>
                      <option>6x</option>
                      <option>12x</option>
                      <option>18x</option>
                      <option>24x</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Observações</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-outline-danger">Cancelar</button>
                <button type="submit" class="btn btn-success">Cadastrar</button>
            </div>
          </form>